#!/usr/bin/env node

var path = require("path");
var crg = require(path.resolve(__dirname, "../dist/index"));
var argv = require("yargs").argv;
var crg_specs = require(path.resolve(__dirname, "../dist/specs"));

var platform = argv.platform;
var type = argv.type;

var source = argv.source;
var targetDir = argv.targetDir;

if (
  !platform ||
  !type ||
  !(platform == "android" || platform == "ios") ||
  !(type == "splash" || type == "icon")
) {
  console.log(
    `Usage: cordova-resources-gen --platform=(android|ios) --type=(splash|icon) [--source="./image.png"] [--targetDir="./put/it/here/"]`
  );
  console.log(`Please provide at least platform and type.`);
  return;
}

//we can start now...
var def;
if (platform == "android" && type == "splash")
  def = crg_specs.androidSplashDefaults;
if (platform == "android" && type == "icon")
  def = crg_specs.androidIconDefaults;
if (platform == "ios" && type == "splash") def = crg_specs.iosSplashDefaults;
if (platform == "ios" && type == "icon") def = crg_specs.iosIconDefaults;

if (source) {
  def.sourceFile = source;
} else {
  console.log(`no source file specified, using default: ${def.sourceFile}`);
}

if (targetDir) {
  def.targetDir = targetDir;
} else {
  console.log(`no targetDir specified, using default: ${def.targetDir}`);
}

//we are done, lets try to run it
crg.generateResource(def);
